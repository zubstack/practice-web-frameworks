<%- include("partials/header"); %>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
      <label for="titleInput">Title</label>
      <input type="text" name="postTitle" class="form-control" id="titleInput" placeholder="Title" rows="1">
    </div>
    <div class="form-group">
      <label for="contentInput">Content</label>
      <textarea  name="postBody" type="text" rows="6" class="form-control form-control-lg" id="contentInput" placeholder="Write a post.."></textarea>
    </div>
    <button type="" class="btn btn-primary">Publish</button>
</form>

<%- include("partials/footer"); %>